<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
   
   <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="30" >
        
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/tv_test2_itemname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="18dp"
        android:text="Item Name"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/et_test2_itemname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_test2_itemname"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_test2_itemname"
        android:layout_marginRight="18dp"
        android:ems="10" />

    <TextView
        android:id="@+id/tv_test2_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_test2_itemname"
        android:layout_below="@+id/et_test2_itemname"
        android:layout_marginTop="18dp"
        android:text="Price"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/et_test2_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_test2_price"
        android:layout_alignRight="@+id/et_test2_itemname"
        android:layout_below="@+id/tv_test2_price"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/tv_test2_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_test2_user"
        android:layout_below="@+id/et_test2_user"
        android:layout_marginTop="18dp"
        android:text="Total:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tv_test2_totaldisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/b_test2_add"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="18dp"
        android:layout_toRightOf="@+id/tv_test2_total"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/b_test2_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/et_test2_user"
        android:layout_below="@+id/tv_test2_total"
        android:layout_marginTop="26dp"
        android:onClick="onClick_AddDetails"
        android:text="ADD" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_test2_price"
        android:layout_below="@+id/et_test2_price"
        android:layout_marginTop="18dp"
        android:text="Tax and Service Charge (%)"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/et_test2_tsc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignRight="@+id/et_test2_price"
        android:layout_below="@+id/textView1"
        android:ems="10"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/et_test2_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_test2_user"
        android:layout_alignRight="@+id/et_test2_tsc"
        android:layout_below="@+id/tv_test2_user"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/tv_test2_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_test2_tsc"
        android:layout_below="@+id/et_test2_tsc"
        android:layout_marginTop="18dp"
        android:text="User"
        android:textAppearance="?android:attr/textAppearanceLarge" />
		</RelativeLayout>
       </ScrollView>
</RelativeLayout>

