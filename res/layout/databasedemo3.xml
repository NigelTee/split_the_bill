<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/bAddDemo3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick_AddRecord"
        android:text="Button" />

    <Button
        android:id="@+id/bClearDemo3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/bAddDemo3"
        android:onClick="onCLick_ClearAll"
        android:text="Button" />

    <ListView
        android:id="@+id/lvListDemo3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/bAddDemo3" >
    </ListView>

</RelativeLayout>
